<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel Listings</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #000;
      background-image: url('https://www.transparenttextures.com/patterns/asfalt-dark.png');
      /* Subtle pattern background */
      color: #fff;
      margin: 0;
      padding: 0;
    }

    .navbar {
      background-color: #111;
      height: 80px;
      display: flex;
      align-items: center;
    }

    .navbar-brand {
      font-size: 1.8em;
      color: #fff !important;
      transition: font-size 0.3s, color 0.3s;
    }

    .navbar-brand:hover {
      font-size: 2em;
      color: #ff4757 !important;
    }

    .navbar-brand:active {
      animation: heartBlast 1s forwards;
    }

    @keyframes heartBlast {
      0% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.5);
        color: #ff4757 !important;
      }

      100% {
        transform: scale(1);
      }
    }

    .nav-link {
      font-size: 1.2em;
      color: #fff !important;
      transition: font-size 0.3s;
    }

    .nav-link:hover {
      background-color: #333;
      border-radius: 5px;
      font-size: 1.4em;
    }

    .navbar-toggler {
      border-color: rgba(255, 255, 255, 0.1);
    }

    .navbar-light .navbar-toggler-icon {
      background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox="0 0 30 30" xmlns="http://www.w3.org/2000/svg"%3E%3Cpath stroke="rgba%28255, 255, 255, 1%29" stroke-width="2" stroke-linecap="round" stroke-miterlimit="10" d="M4 7h22M4 15h22M4 23h22"/%3E%3C/svg%3E');
    }

    .container {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
    }

    .card {
      background-color: #222;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      width: 280px;
      margin: 10px;
      transition: transform 0.3s, box-shadow 0.3s;
      color: #fff;
      position: relative;
      height: 300px;
      /* Reduced height */
    }

    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2);
    }

    .card img {
      width: 100%;
      height: 140px;
      /* Adjusted height for image */
      object-fit: cover;
    }

    .card-content {
      padding: 15px;
      height: calc(100% - 140px);
      /* Adjusted height for content */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .card-title {
      font-size: 1.5em;
      font-weight: bold;
      color: #fff;
    }

    .card-description {
      font-size: 0.9em;
      color: #bbb;
    }

    .card-price-location-wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: auto;
    }

    .card-price {
      font-size: 1.1em;
      color: #fff;
      font-weight: bold;
    }

    .card-location {
      font-size: 0.9em;
      color: #777;
      display: flex;
      align-items: center;
    }

    .card-location i {
      margin-right: 5px;
      color: #ff4757;
    }

    .cart-icon {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #444;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      font-size: 1.2em;
      box-shadow: 0 2px 4px rgba(255, 255, 255, 0.2);
      transition: background-color 0.3s, transform 0.3s, color 0.3s;
    }

    .cart-icon:hover {
      background-color: #555;
      transform: scale(1.1);
    }

    .cart-icon i {
      color: #fff;
    }

    .cart-icon.active i {
      color: #ff4757;
    }

    .card a {
      text-decoration: none;
      color: inherit;
    }

    .card a:hover {
      text-decoration: none;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="#">Hotel Rooms</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/user/user-index">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/orders">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/user-whistlist">Wishlist</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/log-out">Log out</a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <div class="container">
    <% hotels.forEach(hotel=> { %> <div class="card"> <a href="/user/hotel/<%= hotel.id %>"> <img src="/uploads/<%= hotel.photo %>" alt="Hotel Image">
          <div class="card-content">
            <div class="card-title"><%= hotel.name %></div>
            <div class="card-description"><%= hotel.description %></div>
            <div class="card-price-location-wrapper">
              <div class="card-price">$<%= hotel.price %></div>
              <div class="card-location"><i class="fas fa-map-marker-alt"></i><%= hotel.location %></div>
            </div>
          </div>
        </a>
        <div class="cart-icon" onclick="toggleCartIcon(this); addToCart('<%= hotel.id %>', '<%= hotel.name.replace(/'/g, " \\'") %>', '<%= hotel.price %>')">
          <i class="fas fa-heart"></i>
        </div>
      </div>
      <% }); %>
  </div>
  <!-- JavaScript to handle the Add to Cart action -->
  <script>
    function addToCart(hotelId, hotelName, price) {
      fetch('/user/add-to-cart', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ hotelId: hotelId, hotelName: hotelName, price: price }),
      }).then(response => response.json()).then(data => {
        if (data.success) {
          //alert('Hotel added to cart!');
        } else {
          alert('Error adding hotel to cart.');
        }
      }).catch(error => {
        console.error('Error:', error);
      });
    }

    function toggleCartIcon(element) {
      element.classList.toggle('active');
    }
  </script>
  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js">