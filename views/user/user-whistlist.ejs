<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Wishlist</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #000;
            background-image: url('https://www.transparenttextures.com/patterns/asfalt-dark.png');
            color: #eee;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #111;
            height: 80px;
            display: flex;
            align-items: center;
        }

        .navbar-brand {
            font-size: 1.8em;
            color: #fff !important;
            transition: font-size 0.3s, color 0.3s;
        }

        .navbar-brand:hover {
            font-size: 2em;
            color: #ff4757 !important;
        }

        .nav-link {
            font-size: 1.2em;
            color: #fff !important;
            transition: font-size 0.3s, color 0.3s;
        }

        .nav-link:hover {
            background-color: #333;
            border-radius: 5px;
            font-size: 1.4em;
        }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.1);
        }

        .navbar-light .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox="0 0 30 30" xmlns="http://www.w3.org/2000/svg"%3E%3Cpath stroke="rgba%28255, 255, 255, 1%29" stroke-width="2" stroke-linecap="round" stroke-miterlimit="10" d="M4 7h22M4 15h22M4 23h22"/%3E%3C/svg%3E');
        }

        .container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }

        .card {
            background-color: #222;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 250px;
            margin: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
            color: #fff;
            position: relative;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2);
        }

        .card img {
            width: 100%;
            height: 140px;
            object-fit: cover;
        }

        .card-content {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.3em;
            margin-bottom: 10px;
        }

        .card-description {
            font-size: 0.9em;
            color: #bbb;
            margin-bottom: 10px;
        }

        .card-price {
            font-size: 1.1em;
            color: #fff;
            font-weight: bold;
        }

        .badge {
            font-size: 0.9em;
            background-color: #ff6f61;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        a:hover {
            text-decoration: none;
            color: inherit;
        }

        .form-inline .btn-outline-light {
            color: #28a745;
            border-color: #28a745;
        }

        .form-inline .btn-outline-light:hover {
            background-color: #28a745;
            color: #fff;
        }

        .delete-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: transparent;
            border: none;
            color: #ff4757;
            font-size: 1.5em;
            cursor: pointer;
        }

        .delete-btn:hover {
            color: #ff6b81;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Hotel Rooms</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/user/user-index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/orders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/user-Wishlist">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/log-out">Log out</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <% hotels.forEach(hotel => { %>
        <div class="card">
            <a href="/user/hotel/<%= hotel.id %>">
                <img src="/uploads/<%= hotel.hotelphoto %>" alt="Hotel Image">
                <div class="card-content">
                    <div class="card-title">
                        <%= hotel.hotelname %>
                    </div>
                    <div class="card-description">
                        Enjoy a luxurious stay with us.
                    </div>
                    <div class="card-price">
                        <% if (hotel.price) { %>
                        $<%= hotel.price %>
                        <% } else { %>
                        <span class="badge">Price not available</span>
                        <% } %>
                    </div>
                </div>
            </a>
            <button class="delete-btn" data-id="<%= hotel.id %>">
                <i class="fa fa-trash"></i>
            </button>
        </div>
        <% }); %>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-btn').click(function () {
                const hotelId = $(this).data('id');
                const card = $(this).closest('.card');

                $.ajax({
                    url: '/user/delete-from-cart',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ hotelId: hotelId }),
                    success: function (response) {
                        if (response.success) {
                            card.remove();
                        } else {
                            alert('Error deleting item.');
                        }
                    },
                    error: function () {
                        alert('Error deleting item.');
                    }
                });
            });
        });
    </script>
</body>

</html>
